{% extends '::base.html.twig' %}

{% block title %}Symfasize{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">Symfasize</a>
            </div>
            <div class="navbar-collapse collapse">
                <p class="navbar-text">Bootstrap your Symfony2 project with ease!</p>
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('symfasize.about') }}">About</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div id="content-outer" class="container">
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <div class="footer">
            <div class="center-block">
                <small>Symfasize and all content on this site are released under the <a
                            href="{{ repository_url }}/blob/master/LICENSE">MIT license</a>.
                </small>
            </div>
        </div>
    </div>
{% endblock body %}

{% block stylesheets %}
    {{ parent() }}
    {% if app.debug %}
        <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css">
        <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap-theme.css">
    {% else %}
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css">
    {% endif %}
    <link rel="stylesheet" href="/assets/css/symfasize.css">

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if app.debug %}
        <script src="/assets/jquery/jquery-1.10.2.js"></script>
        <script src="/assets/bootstrap/js/bootstrap.js"></script>
    {% else %}
        <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '{{ ga_tracking_id }}', 'symfasize.org');
            ga('send', 'pageview');
        </script>
    {% endif %}
    <script src="/assets/js/symfasize.js"></script>
{% endblock %}
